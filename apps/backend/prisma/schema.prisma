generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model TMDBMovie {
  id           Int      @id @default(autoincrement())
  tmdb_id      Int      @unique
  title        String
  overview     String?
  release_date DateTime?
  poster_path  String?
  popularity   Float?
  vote_average Float?
  vote_count   Int?
  createdAt    DateTime @default(now())
}

